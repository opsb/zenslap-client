#!/bin/sh
app=$(git config zenslap.zenslap)
while [ "$app" = "" ]; do·
  echo "Enter the name of the zenslap app"
  read unvalidatedApp·
  $(heroku config --app $unvalidatedApp)
  if [ "$?" != "0" ]; then
    echo $app
  else
    app=$unvalidatedApp
    git config zenslap.zenslap $app
  fi
done
echo $app
heroku $* --app $app